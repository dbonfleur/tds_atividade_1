@page
@model GerenRest.RazorPages.Pages.Mesa.Index

<h1 class="display-4">Mesas Registradas</h1>

<hr/>
<td><a class="btn btn-success" asp-page="./Create">Cadastrar nova Mesa</a></td>
<hr/>

<div>
    <table class="table table-bordered table-striped table-hover-custom">
        <thead>
            <tr>
                <td>Numero da Mesa</td>
                <td>Status Mesa</td>
                <td>Hora Abertura</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var mesaModel in Model.MesaModel)
            {
                <tr>
                    <td>@Html.DisplayFor(model => mesaModel.Numero)</td>
                    <td>@Html.DisplayFor(model => mesaModel.Ocupada)</td>
                    <td>@Html.DisplayFor(model => mesaModel.HoraAbertura)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@mesaModel.MesaID">Alterar</a>
                        <a asp-page="./Details" asp-route-id="@mesaModel.MesaID">Visualizar</a>
                        <a asp-page="./Delete" asp-route-id="@mesaModel.MesaID">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>